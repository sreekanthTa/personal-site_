        {
          "name": "Advanced Networking",
          "description": "Custom networks, overlay networks, and network plugins for complex container communication.",
          "example": [
            {
              "command": "docker network create --driver overlay my_overlay",
              "input": "",
              "output": "Overlay network created"
            }
          ],
          "options": ["bridge", "host", "overlay", "macvlan"]
        },
        {
          "name": "Aliases",
          "description": "Set service or container aliases in networks for easier DNS-based access.",
          "example": [
            {
              "command": "docker network connect --alias db mynet mycontainer",
              "input": "",
              "output": ""
            }
          ],
          "options": []
        }
      ]
    },
    {
      "title": "B",
      "content": [
        {
          "name": "BuildKit",
          "description": "Modern image build engine with better caching, parallel builds, and secret management.",
          "example": [
            {
              "command": "DOCKER_BUILDKIT=1 docker build .",
              "input": "",
              "output": "BuildKit enabled"
            }
          ],
          "options": []
        }
      ]
    },
    {
