        {
          "name": "Cgroups",
          "description": "Linux kernel feature to limit and isolate resource usage (CPU, memory) of containers.",
          "example": [
            {
              "command": "docker run --memory 512m --cpus 1 nginx",
              "input": "",
              "output": ""
            }
          ],
          "options": []
        },
        {
          "name": "Container Orchestration",
          "description": "Coordination of multiple containers across hosts, usually using Compose, Swarm, or Kubernetes.",
          "example": [
            {
              "command": "docker stack deploy -c docker-compose.yml mystack",
              "input": "",
              "output": "Stack deployed"
            }
          ],
          "options": []
        }
      ]
    },
