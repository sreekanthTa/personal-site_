            {
              "command": "docker compose up -d",
              "input": "",
              "output": "All services started in detached mode"
            }
          ],
          "options": ["services", "volumes", "networks", "depends_on", "build"]
        },
        {
          "name": "Docker Secrets",
          "description": "Securely manage sensitive data like passwords and API keys for containers.",
          "example": [
            {
              "command": "docker secret create my_secret secret.txt",
